{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@store/*": ["./app/store/*"],
      "@config/*": ["./app/config/*"],
      "@icons/*": ["./app/icons/*"],
      "@components/*": ["./app/components/*"],
      "@client/*": ["./app/client/*"],
      "@locales/*": ["./app/locales/*"],
      "@pages/*": ["./app/pages/*"],
      "@styles/*": ["./app/styles/*"],
      "@hook/*": ["./app/hook/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/calcTextareaHeight.ts"],
  "exclude": ["node_modules"]
}
